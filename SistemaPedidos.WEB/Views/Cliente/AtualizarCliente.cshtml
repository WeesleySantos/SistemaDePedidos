@model SistemaPedidos.WEB.Models.ClienteViewModel

<form asp-action="AtualizarCliente">
    <input asp-for="Id" type="hidden" />
    <div class="container border p-3 mt-5">
        <h1 class="text-primary">Atualizar Cliente</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size: 20px;" asp-for="Nome">Nome</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Nome" required />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size: 20px;" asp-for="Ativo">Ativo</label>
            </div>
            <div class="col-10 form-check form-switch">
                <input class="form-check-input" type="checkbox" asp-for="Ativo">
            </div>
            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control">Voltar para a lista</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Atualizar" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>